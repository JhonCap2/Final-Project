{
  "name": "allergysafety-fullstack",
  "version": "1.0.0",
  "description": "AllergySafety - Full Stack Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --prefix AllergySafety-Server",
    "dev:client": "npm run dev --prefix AllergySafety-Client",
    "build": "npm install --prefix AllergySafety-Client --include=dev && npm run build --prefix AllergySafety-Client",
    "start": "npm install --prefix AllergySafety-Server --omit=dev && node AllergySafety-Server/server.js",
    "postinstall": "npm install --prefix AllergySafety-Server && npm install --prefix AllergySafety-Client"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "keywords": [
    "allergy",
    "safety",
    "health",
    "fullstack"
  ],
  "author": "Jhon Capellan",
  "license": "ISC"
}
